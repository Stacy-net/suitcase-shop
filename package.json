{
	"name": "project-template",
	"version": "1.0.0",
	"description": "Capstone Project Template ",
	"repository": {
		"type": "git",
		"url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
	},
	"license": "ISC",
	"author": "Anastasiia Bielik",
	"type": "commonjs",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "echo \"Dummy build script required for Autocode Compile\"",
		"dev": "concurrently \"sass --watch src/scss/main.scss src/dist/main.css --no-source-map\" \"live-server src --port=3000 --open=/index.html --no-browser-cache\"",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:js": "eslint .",
		"lint:js:fix": "eslint . --fix",
		"lint:css": "stylelint \"src/**/*.scss\"",
		"lint:css:fix": "stylelint \"src/**/*.scss\" --fix"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.5.0",
		"live-server": "^1.2.2",
		"sass": "^1.93.3",
		"stylelint": "^16.25.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-scss": "^6.12.1"
	}
}
